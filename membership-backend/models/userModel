const db = require('../database');

const createUser = (
  firstname,
  lastname,
  id_number,
  date_of_birth,
  hashedPassword,
  callback
) => {
  const query =
    "INSERT INTO users (firstname, lastname, id_number, date_of_birth, password) VALUES (?, ?, ?, ?, ?)";
  db.run(query, [firstname, lastname,id_number,date_of_birth, hashedPassword], function (err) {
    if (err) return callback(err);
    callback(null, { id: this.lastID });
  });
};

const getUserByIdNumber = (id_number, callback) => {
  const query = 'SELECT * FROM users WHERE id_number = ?';
  db.get(query, [id_number], (err, row) => {
    if (err) return callback(err);
    callback(null, row);
  });
};

module.exports = {
  createUser,
  getUserByIdNumber,
};
